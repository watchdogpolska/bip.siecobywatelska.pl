{#
   This is the base template used as the application layout which contains the
   common elements and decorates all the other templates.
   See http://symfony.com/doc/current/book/templating.html#template-inheritance-and-layouts
#}
<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <title>{% block title %}Symfony Demo application{% endblock %}</title>

        {% block stylesheets %}
            <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
            <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/cerulean/bootstrap.min.css" rel="stylesheet" integrity="sha384-zF4BRsG/fLiTGfR9QL82DrilZxrwgY/+du4p/c7J72zZj+FLYq4zY00RylP9ZjiT" crossorigin="anonymous">
            <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body>

        {% block header %}
            <header>
                <div class="navbar navbar-default navbar-static-top" role="navigation">
                    <div class="container">
                        <div class="navbar-header">
                            <a class="navbar-brand" href="{{ path('homepage') }}">
                                BIP
                            </a>

                            <button type="button" class="navbar-toggle"
                                    data-toggle="collapse"
                                    data-target=".navbar-collapse">
                                <span class="sr-only">Toggle Nav</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right">
                                {% block header_navigation_links %}

                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li>
                                            {#<a href="{{ path('admin_post_index') }}">#}
                                                {#<i class="fa fa-lock" aria-hidden="true"></i> {{ 'menu.admin'|trans }}#}
                                            {#</a>#}
                                        </li>
                                    {% endif %}
                                {% endblock %}

                                {% if app.user %}
                                    <li>
                                        <a
                                                href="{{ path('fos_user_profile_show') }}"
                                                data-toggle="tooltip"
                                                data-placement="bottom"
                                                title="You are logged as {{ app.user }}">
                                            <i class="fa fa-user" aria-hidden="true"></i> Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a href="{{ logout_path() }}">
                                            <i class="fa fa-sign-out" aria-hidden="true"></i> Logout
                                        </a>
                                    </li>
                                {% else %}
                                    <li>
                                        <a href="{{ path('fos_user_security_login') }}">
                                            <i class="fa fa-sign-in" aria-hidden="true"></i> Login
                                        </a>
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            </header>
        {% endblock %}

        <div class="container body-container">
            {% block body %}
                <div class="row">
                    <div id="main" class="col-sm-9">
                        {{ include('default/_flash_messages.html.twig') }}

                        {% block main %}{% endblock %}
                    </div>

                    <div id="sidebar" class="col-sm-3">
                        {% block sidebar %}
                            {# {{ render_esi(controller('FrameworkBundle:Template:template', {
                                'template': 'blog/about.html.twig',
                                'sharedAge': 600,
                                '_locale': app.request.locale
                            })) }} #}
                        {% endblock %}
                    </div>
                </div>
            {% endblock %}
        </div>
        {% block messages %}
        <div class="container wiadomosci-box">    
            <ul class="nav nav-tabs nav-justified wiadomosci-bar">
                <li role="presentation" class="active"><a href="#">Aktualności</a></li>
                <li role="presentation"><a href="#">Ogłoszenia</a></li>
                <li role="presentation"><a href="#">Obwieszczenia</a></li>
                <li role="presentation"><a href="#">Inne</a></li>
            </ul>
            <div class="wiadomosci-content nav-justified">
            </div>
        </div>            
        {% endblock %}
        {% block footer %}
            <footer>
                <div class="container">
                    <div class="row">
                        <div id="footer-copyright" class="col-md-6">
                            <p>&copy; {{ 'now'|date('Y') }} - Sieć Obywatelska Watchdog Polska</p>
                            <p>MIT Licencja</p>
                        </div>
                        <div id="footer-resources" class="col-md-6">
                            <p>

                            </p>
                        </div>
                    </div>
                </div>
            </footer>
        {% endblock %}

        {% block javascripts %}
            <script
                    src="https://code.jquery.com/jquery-3.1.0.js"
                    integrity="sha256-slogkvB1K3VOkzAI8QITxV3VzpOnkeNVsKvtkYLMjfk="
                    crossorigin="anonymous"></script>
            <script
                    src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"
                    integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
                    crossorigin="anonymous"></script>
            <script>
                $(function () {
                    $('[data-toggle="tooltip"]').tooltip()
                })
            </script>
            <script>
                //block wiadomosci
                var menuElement = '.wiadomosci-bar li[role="presentation"]';
                $(menuElement).on('click', function(){
                    $(menuElement).removeClass("active");
{#                    $(this).addClass("active");#}
                });
            </script>
        {% endblock %}
    </body>
</html>