{% extends 'base.html.twig' %}

{% block body %}
    <div class="pull-right">

            <a href="{{ path('admin_collection_new') }}" class="btn btn-primary">
                <i class="fa fa-plus" aria-hidden="true"></i>
                Create a new entry
            </a>

    </div>

    <h1>Collection list</h1>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title">List</h2>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Slug</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for collection in collections %}
                <tr>
                    <td><a href="{{ path('admin_collection_show', { 'id': collection.id }) }}">{{ collection.id }}</a></td>
                    <td>{{ collection.slug }}</td>
                    <td>{{ collection.name }}</td>
                    <td>
                        <a href="{{ path('admin_collection_show', { 'id': collection.id }) }}" class="btn btn-default">
                            <i class="fa fa-eye"></i>
                            Show
                        </a>
                        <a href="{{ path('admin_collection_edit', { 'id': collection.id }) }}" class="btn btn-default">
                            <i class="fa fa-pencil"></i>
                            Edit
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
