{% extends 'base.html.twig' %}
{% block body %}
    <div class="pull-right">
        {{ include('@SowpRegistry/admin/registry/buttons/_btn_list.html.twig') }}
        {{ include('@SowpRegistry/admin/registry/buttons/_btn_list_row.html.twig') }}
        {{ include('@SowpRegistry/admin/registry/buttons/_btn_edit.html.twig') }}
        {{ include('@SowpRegistry/admin/registry/_form_delete.html.twig') }}
    </div>

    <h1>Registry</h1>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title">Info</h2>
        </div>
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ registry.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ registry.name }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ registry.type }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ registry.description }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    {{ include('@SowpRegistry/admin/registry/_panel_attributes.html.twig', {objects: registry.attributes}) }}

{% endblock %}
