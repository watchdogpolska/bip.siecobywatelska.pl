{% extends 'NewsModuleBundle:news:_form_new_layout.html.twig' %}

{% block body %}
    {% include 'NewsModuleBundle::flash.html.twig' %}
    <div class="pull-right">

        <a href="{{ path('sowp_newsmodule_news_index') }}" class="btn btn-default">
            <i class="fa fa-list" aria-hidden="true"></i>
            Back to the list
        </a>
        {{ form_start(delete_form, {"attr": {"style": "display: inline-block"}}) }}
            <button type="submit" class="btn btn-danger">
                <i class="fa fa-trash" aria-hidden="true"></i>
                Delete
            </button>
        {{ form_end(delete_form) }}
    </div>
<h1>News edit</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <input type="submit" value="Edit" class="pull-right" />
    {{ form_end(form) }}
{% endblock %}
